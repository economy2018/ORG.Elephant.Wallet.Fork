<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_write_down"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/bread_margin"
        android:text="@string/SecurityCenter.paperKeyTitle"
        android:textAlignment="center"
        android:textColor="@color/black_333333"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/ic_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/ic_paper_phrase"
        android:layout_below="@+id/title"
        android:elevation="8dp" />

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/bread_margin"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close_white_24dp" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp"
        android:lineSpacingMultiplier="1.3"
        android:layout_below="@+id/ic_paper"
        android:text="@string/StartPaperPhrase.body"
        android:textColor="@color/black_999999"
        android:textSize="14sp" />

    <com.breadwallet.presenter.customviews.BRButton
        android:id="@+id/button_write_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginEnd="@dimen/bread_margin"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:text="@string/StartPaperPhrase.buttonTitle"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:buttonType="1"
        app:isBreadButton="true" />

</RelativeLayout>
